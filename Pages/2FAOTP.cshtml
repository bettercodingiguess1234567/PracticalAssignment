@page
@model PracticalAssignment.Pages._2FAOTPModel
@{
    ViewData["Title"] = "2FA OTP";
}

<h2>@ViewData["Title"]</h2>

<p>Enter the OTP sent to your email address to complete the two-factor authentication.</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-page-handler="OnPostVerifyOTP">
    <div class="form-group">
        <label for="OTP">OTP</label>
        <input type="text" id="OTP" class="form-control" name="OTP" />
        <span asp-validation-for="OTP" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Verify OTP</button>
</form>