@page
@model PracticalAssignment.Pages.PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<form method="post">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="Enable2FA" />
        <label class="form-check-label" for="Enable2FA">Enable Two-Factor Authentication (2FA)</label>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>

    <p>@TempData["2FA enabled"]</p>

</form>